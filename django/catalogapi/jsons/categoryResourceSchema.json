                        { "type": "string", "format": "date-time" },
                        { "type": "string" }
                    ]
                },
                "endDateTime": {
                    "anyOf": [
                        { "type": "string", "format": "date-time" },
                        { "type": "string" }
                    ]
                }
            },
            "required": ["startDateTime"]
        },
        "parentId": {
            "type": "string"
